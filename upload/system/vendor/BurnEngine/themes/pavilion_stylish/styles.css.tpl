/*  -----------------------------------------------------------------------------------------
    H E A D E R
-----------------------------------------------------------------------------------------  */

.tbSticky {
  -webkit-box-shadow:
    0 1px 0 rgba(0, 0, 0, 0.05),
    0 0 10px rgba(0, 0, 0, 0.1);
  box-shadow:
    0 1px 0 rgba(0, 0, 0, 0.05),
    0 0 10px rgba(0, 0, 0, 0.1);
}

/*  -----------------------------------------------------------------------------------------
    B U T T O N S
-----------------------------------------------------------------------------------------  */

.btn,
.button,
button,
[type=button],
[type=submit]
{
  border-radius: 0;
  -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
          box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.15);
}
